                                    <classpath refid="maven.runtime.classpath" />
                                    <fileset file="${basedir}/target/${wso2am}/dbscripts/heart-beat/h2.sql" />
                                </sql>
                                <echo message="##################### END ####################" />
                            </tasks>
                        </configuration>
                    </execution>
                </executions>
