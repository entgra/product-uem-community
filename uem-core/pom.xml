                        <goals>
                            <goal>run</goal>
                        </goals>
                        <configuration>
                            <target name="replace dbscripts to avoid tenant creation issue ">
                                <replace file="target/${wso2am}/dbscripts/db2.sql" token="REG_VALUE VARCHAR(1000)," value="REG_VALUE VARCHAR(10000)," />
